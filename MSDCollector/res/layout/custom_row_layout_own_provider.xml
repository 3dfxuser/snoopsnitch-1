<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_sectionBackground"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingTop="4dp" >

    <ImageView
        android:id="@+id/imgProviderImage"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_content_sms_event" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2" >

        <TextView
            android:id="@+id/txtOwnProviderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/listview_provider_item_ownprovider_text"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/txtProviderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout> 